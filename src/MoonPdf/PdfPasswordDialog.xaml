<Window x:Class="MoonPdf.PdfPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter password for PDF" Height="103" Width="225"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel>
        <Label>Password:</Label>
        <PasswordBox x:Name="txtPassword" TabIndex="0"></PasswordBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
            <Button Content="Ok" Width="50" Click="Button_Click_1" Margin="0,0,4,0" IsDefault="True"></Button>
            <Button Content="Cancel" Width="50" Click="Button_Click_2" IsCancel="True"></Button>
        </StackPanel>
    </StackPanel>
</Window>
